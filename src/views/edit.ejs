<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <h1><%= title %></h1>

    <%- include('partials/navBar.ejs') %>

    <form action="/edit/<%= user._id %>" method="POST"><!--Enviando o id na action, capturo ele com o req.params-->
        <div>
            <label for="">Nome</label>
            <input type="text" name="name" placeholder="Digite seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label for="">Idade</label>
            <input type="number" name="age" placeholder="Digite sua idade" min="0" value="<%= user.age %>">
        </div>
        <div>
            <label for="">E-mail</label>
            <input type="text" name="email" placeholder="Digite seu e-mail" value="<%= user.email %>">
        </div>
        <button type="submit">Editar</button>
    </form>
    <div>
        <% if (typeof message !== 'undefined') { %>
            <p><%= message %></p>
        <% } %>
    </div>

    <%- include('partials/foot.ejs') %>
</body>
</html>